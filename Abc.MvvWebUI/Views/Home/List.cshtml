@using Abc.MvvWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
          @Html.Action("GetCategories","Home")
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {


                <div class="alert alert-warning" role="alert">
                    Bu kategoride ürün kalmadı.
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    @Model.Count() adet ürün bulundu.
                </div>

            }
            @Html.Partial("_ProductList", Model)
        </div>

    </div>
</div>

